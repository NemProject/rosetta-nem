{
    "compilerOptions": {
        "baseUrl": "./",
        "declaration": true,
        "target": "es6",
        "module": "commonjs",
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "esModuleInterop": true,
        "lib": ["dom", "es2017"],
        "typeRoots": ["node_modules/@types"],
        "paths": {
            "rosetta-nem": ["./src"],
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ]
}
